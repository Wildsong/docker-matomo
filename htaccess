#</Files>

# This is enough to allow matomo.php or matomo.js
<Files ~ "^matomo\.(js|php)|robots\.txt$">
    Allow from all
    Satisfy any
</Files>

# Disable session auto-start; incompatible with Zend_Session.
php_flag session.auto_start off
